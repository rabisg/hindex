library
  exposed-modules:
    HIndex
  other-modules:
    HIndex.Constants,
    HIndex.Index,
    HIndex.Init,
    HIndex.InMemorySegment,
    HIndex.Metadata,
    HIndex.Operations,
    HIndex.Segment,
    HIndex.Serializable,
    HIndex.Term,
    HIndex.Types,
    HIndex.Util.BinaryHelper,
    HIndex.Util.IOHelper
