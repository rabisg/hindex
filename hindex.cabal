test-suite tests
  default-language: Haskell2010
  type:             exitcode-stdio-1.0
  hs-source-dirs:   tests
  main-is:          Main.hs

  build-depends:    base >=4.7 && <4.8,
                    binary >=0.7.1,
                    data-ordlist,
                    directory,
                    filepath,
                    hindex ==0.0.0.1,
                    tasty >=0.10,
                    tasty-hunit >= 0.9.2

  ghc-options:
    -Wall -threaded -rtsopts -with-rtsopts=-N


source-repository head
  type:     git
  location: https://github.com/typedb/hindex
